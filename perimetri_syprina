#include <iostream>
using namespace std;
int main()
{
  int a, b, s, p;
	
	cout << "Vlera per a: ";
	cin >> a;
	cout << "Vlera per b: ";
	cin >> b;
	cout << endl;

	s = a * b;
	p = 2 * a + 2 * b;

	cout << "Perimetri: " << p << " njesi" << "\n";
	cout << "Syprina: " << s << " njesi" << "\n";

	return 0;
}
