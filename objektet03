// Destruktoret
#include <iostream>
#include <string>
using namespace std;

class njeriu
{
  private: 
		string emri;
		string mbiemri;
		int mosha;
		char gjinia;
		double gjatesia;

	public:
		void vendosVlerat(string, string, int, char, double);
		void printo();
		njeriu();
		~njeriu();
};

void main()
{
	njeriu a, b;
	cout << "--------------para--------------" << endl;
	
	a.printo();
	b.printo();
	
	cout << "--------------pas---------------" << endl;
	a.vendosVlerat("Albert", "Spahiu", 27, 'M', 1.87);
	b.vendosVlerat("Festa", "Celina", 26, 'F', 1.75);
	a.printo();
	b.printo();
	system("pause");
}

njeriu :: njeriu()
{
	emri = "Nuk ekziston";
	mbiemri = "Nuk ekziston";
	mosha = 0;
	gjinia = '-';
	gjatesia = 0;
}

njeriu :: ~njeriu()
{
	//liro memorien - javen tjeter
}
void njeriu :: printo()
{
	cout << "Emri: " << emri << endl;
	cout << "Mbiemri: " << mbiemri << endl;
	cout << "Mosha: " << mosha << " vjeq/e" << endl;
	cout << "Gjinia: " << gjinia << endl;
	cout << "Gjatesia: " << gjatesia << endl;
	cout << endl;
}

void njeriu :: vendosVlerat(string e, string m, int mo, char gj, double gjt)
{
	emri = e;
	mbiemri = m;
	mosha = mo;
	gjinia = gj;
	gjatesia = gjt;
}
